import { ${businessName}Keys, ${businessName}Table } from './table';
import type {  ${ModuleName}${BusinessName} } from '@/api/modules/${moduleName}/${businessName}/types';

interface CardData {
  id: number;
  raw?: ${ModuleName}${BusinessName};
  items: {
    label: string;
    value: any;
  }[];
}

